<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/crime_list_item_slovedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:enabled="false"
        android:focusable="false"
        android:padding="4dp"/>
	<TextView 
            android:id="@+id/crime_list_itme_titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111"
            android:layout_toLeftOf="@id/crime_list_item_slovedCheckBox"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textStyle="bold"
            />
    <TextView
        android:id="@+id/crime_list_item_dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crime_list_item_slovedCheckBox"
        android:layout_below="@id/crime_list_itme_titleTextView"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:text="222" />
</RelativeLayout>
